{
  "name": "@stashgg/stash-pay",
  "version": "1.0.3",
  "description": "React component for Stash pay checkout",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/stash-pay.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run copy-css",
    "copy-css": "mkdir -p dist/styles && cp src/styles/stash-pay.css dist/styles/stash-pay.css",
    "dev": "tsc --watch"
  },
  "keywords": [
    "stash",
    "payment",
    "checkout",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stashgg/stash-pay-web.git"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5"
  }
}
